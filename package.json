{
  "name": "portfolio",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "format": "biome format --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @portfolio/db db:push",
    "db:studio": "turbo -F @portfolio/db db:studio",
    "db:generate": "turbo -F @portfolio/db db:generate",
    "db:migrate": "turbo -F @portfolio/db db:migrate"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^25.0.1",
    "turbo": "^2.6.3"
  },
  "packageManager": "pnpm@10.14.0"
}
